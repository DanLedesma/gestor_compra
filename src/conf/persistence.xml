<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ferreteriagestioncompraPU" transaction-type="JTA">
    <jta-data-source>java:app/db_compras</jta-data-source>
    <class>modelo.Articulo</class>
    <class>modelo.Departamento</class>
    <class>modelo.Empleado</class>
    <class>modelo.Marca</class>
    <class>modelo.Proveedor</class>
    <class>modelo.SolDetArticulo</class>
    <class>modelo.SolDetOrden</class>
    <class>modelo.SolEncArticulo</class>
    <class>modelo.SolEncOrden</class>
    <class>modelo.UnidadMedida</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
